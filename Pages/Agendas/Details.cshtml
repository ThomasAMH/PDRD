@page
@model PDRD.Pages.Agendas.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Agenda</h4>
    <hr />
    <h4>Meeting Date</h4>
    <p>@Model.Agenda.MeetingDate</p>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agenda.MeetingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agenda.MeetingDate)
        </dd>
        <dt class="col-sm-2">
            Opening Hymn
        </dt>
        <dd class="col-sm-10">
            @Model.Agenda.OpeningHymn?.HymnNumber - @Model.Agenda.OpeningHymn?.HymnName
        </dd>
        <dt class="col-sm-2">
            Sacrament Hymn
        </dt>
        <dd class="col-sm-10">
            @Model.Agenda.SacramentHymn?.HymnNumber - @Model.Agenda.SacramentHymn?.HymnName
        </dd>
        <dt class="col-sm-2">
            Intermediate Hymn
        </dt>
        <dd class="col-sm-10">
            @Model.Agenda.IntermediateHymn?.HymnNumber - @Model.Agenda.IntermediateHymn?.HymnName
        </dd>
        <dt class="col-sm-2">
            Closing Hymn
        </dt>
        <dd class="col-sm-10">
            @Model.Agenda.ClosingHymn?.HymnNumber - @Model.Agenda.ClosingHymn?.HymnName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agenda.SpecialMusicalNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agenda.SpecialMusicalNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agenda.OpeningPrayerPersonID)
        </dt>
        <dd class="col-sm-10">
            @Model.Agenda.OpeningPrayerPerson?.PersonPrefix @Model.Agenda.OpeningPrayerPerson?.FirstName @Model.Agenda.OpeningPrayerPerson?.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agenda.ClosingPrayerPersonID)
        </dt>
        <dd class="col-sm-10">
            @Model.Agenda.ClosingPrayerPerson?.PersonPrefix @Model.Agenda.ClosingPrayerPerson?.FirstName @Model.Agenda.ClosingPrayerPerson?.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agenda.PresidingPersonID)
        </dt>
        <dd class="col-sm-10">
            @Model.Agenda.PresidingPerson?.PersonPrefix @Model.Agenda.PresidingPerson?.FirstName @Model.Agenda.PresidingPerson?.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agenda.ConductingPersonID)
        </dt>
        <dd class="col-sm-10">
            @Model.Agenda.ConductingPerson?.PersonPrefix @Model.Agenda.ConductingPerson?.FirstName @Model.Agenda.ConductingPerson?.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agenda.NonSpeakerProgram)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agenda.NonSpeakerProgram)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Agenda?.AgendaID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
