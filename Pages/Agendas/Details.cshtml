@page
@model PDRD.Pages.Agendas.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Sacrament Meeting Details</h1>
<h5 class="text-center">@Html.DisplayFor(model => model.Agenda.MeetingDate)</h5>
<hr />
<div>
    <dl class="row dl-horizontal" style="margin:0 auto;max-width:900px;">
        <dt class="col-sm-3 mt-3">
            Presiding
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            @Model.Agenda.PresidingPerson?.PersonPrefix @Model.Agenda.PresidingPerson?.FirstName
            @Model.Agenda.PresidingPerson?.LastName
        </dd>
        <dt class="col-sm-3 mt-3">
            @Html.DisplayNameFor(model => model.Agenda.ConductingPersonID)
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            @Model.Agenda.ConductingPerson?.PersonPrefix @Model.Agenda.ConductingPerson?.FirstName
            @Model.Agenda.ConductingPerson?.LastName
        </dd>
        <dt class="col-sm-3 mt-3">
            Opening Hymn
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            <i>"@Model.Agenda.OpeningHymn?.HymnName"</i> #@Model.Agenda.OpeningHymn?.HymnNumber
        </dd>
        <dt class="col-sm-3 mt-3">
            Invocation
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            @Model.Agenda.OpeningPrayerPerson?.PersonPrefix @Model.Agenda.OpeningPrayerPerson?.FirstName
            @Model.Agenda.OpeningPrayerPerson?.LastName
        </dd>
        <dt class="col-sm-12 text-center mt-3">
            <h4><b>Ward Business</b></h4>
        </dt>
        <dd class="col-sm-12 text-center mt-3">
            @Html.DisplayFor(model => model.Agenda.NonSpeakerProgram)
        </dd>

        <dt class="col-sm-3 mt-3">
            Sacrament Hymn
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            <i>"@Model.Agenda.SacramentHymn?.HymnName"</i> #@Model.Agenda.SacramentHymn?.HymnNumber
        </dd>

        <dd class="col-sm-12 text-center mt-3">
            <h4><b>Sacrament</b></h4>
        </dd>

        @if (Model.Agenda.IntermediateHymn?.HymnNumber > 0)
        {
            <dt class="col-sm-3 mt-3">
                Intermediate Hymn
            </dt>
            <dd class="col-sm-6 text-center mt-3">
                ......................................................................
            </dd>
            <dd class="col-sm-3 text-end mt-3">
                <i>"@Model.Agenda.IntermediateHymn?.HymnName"</i> #@Model.Agenda.IntermediateHymn?.HymnNumber
            </dd>
        }
        @if (Model.Agenda.SpecialMusicalNumber != null)
        {
            <dt class="col-sm-3 mt-3">
                Musical Number
            </dt>
            <dd class="col-sm-6 text-center mt-3">
                ......................................................................
            </dd>
            <dd class="col-sm-3 text-end mt-3">
                @Html.DisplayFor(model => model.Agenda.SpecialMusicalNumber)
            </dd>
        }

        <dt class="col-sm-3 mt-3">
            Closing Hymn
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            <i>"@Model.Agenda.ClosingHymn?.HymnName"</i> #@Model.Agenda.ClosingHymn?.HymnNumber
        </dd>
        <dt class="col-sm-3 mt-3">
            Benediction
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        @* Aqui hay cambios  *@
        <dd class="col-sm-3 text-end mt-3">
            @Model.Agenda.ClosingPrayerPerson?.PersonPrefix @Model.Agenda.ClosingPrayerPerson?.FirstName
            @Model.Agenda.ClosingPrayerPerson?.LastName
        </dd>
        @for (int i = 0; i < Model.Agenda.Talks?.Count; i++)
        {
            <dt class="col-sm-3 mt-3">
                Speaker Name
            </dt>
            <dd class="col-sm-6 text-center mt-3">
                ......................................................................
            </dd>
            <dd class="col-sm-3 text-end mt-3">
                @Model.Agenda.Talks[i].Person?.PersonPrefix @Model.Agenda.Talks[i].Person?.FirstName
                @Model.Agenda.Talks[i].Person?.LastName
            </dd>
            <dt class="col-sm-3 mt-3">
                Topic
            </dt>
            <dd class="col-sm-6 text-center mt-3">
                ......................................................................
            </dd>
            <dd class="col-sm-3 text-end mt-3">
                @Model.Agenda.Talks[i].Topic
            </dd>
        }
        @* Aqui terminan los cambios *@
    </dl>
</div>
<div class="text-center mt-5">
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Agenda?.AgendaID">Edit</a>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>
