@page
@model PDRD.Pages.Agendas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Sacrament Meeting Details</h1>
<h5 class="text-center">@Html.DisplayFor(model => model.Agenda.MeetingDate)</h5>
<hr />
<h5 class="text-center" style="color:red;">Are you sure you want to delete this?</h5>
<div>
    <dl class="row dl-horizontal" style="margin:0 auto;max-width:900px;">
        <dt class="col-sm-3 mt-3">
            Presiding
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            @Model.Agenda.PresidingPerson?.PersonPrefix @Model.Agenda.PresidingPerson?.FirstName @Model.Agenda.PresidingPerson?.LastName
        </dd>
        <dt class="col-sm-3 mt-3">
            @Html.DisplayNameFor(model => model.Agenda.ConductingPersonID)
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            @Model.Agenda.ConductingPerson?.PersonPrefix @Model.Agenda.ConductingPerson?.FirstName @Model.Agenda.ConductingPerson?.LastName
        </dd>
        <dt class="col-sm-3 mt-3">
            Opening Hymn
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            <i>"@Model.Agenda.OpeningHymn?.HymnName"</i> #@Model.Agenda.OpeningHymn?.HymnNumber
        </dd>
        <dt class="col-sm-3 mt-3">
            Invocation
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            @Model.Agenda.OpeningPrayerPerson?.PersonPrefix @Model.Agenda.OpeningPrayerPerson?.FirstName @Model.Agenda.OpeningPrayerPerson?.LastName
        </dd>
        <dt class="col-sm-12 text-center mt-3"><h4><b>Ward Business</b></h4></dt>
        <dd class="col-sm-12 text-center mt-3">
            @Html.DisplayFor(model => model.Agenda.NonSpeakerProgram)
        </dd>

        <dt class="col-sm-3 mt-3">
            Sacrament Hymn
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            <i>"@Model.Agenda.SacramentHymn?.HymnName"</i> #@Model.Agenda.SacramentHymn?.HymnNumber
        </dd>

        <dd class="col-sm-12 text-center mt-3"><h4><b>Sacrament</b></h4></dd>

        @if (Model.Agenda.IntermediateHymn?.HymnNumber > 0)
        {
            <dt class="col-sm-3 mt-3">
                Intermediate Hymn
            </dt>
            <dd class="col-sm-6 text-center mt-3">
                ......................................................................
            </dd>
            <dd class="col-sm-3 text-end mt-3">
                <i>"@Model.Agenda.IntermediateHymn?.HymnName"</i> #@Model.Agenda.IntermediateHymn?.HymnNumber
            </dd>
        }
        @if (Model.Agenda.SpecialMusicalNumber != null)
        {
            <dt class="col-sm-3 mt-3">
                Musical Number
            </dt>
            <dd class="col-sm-6 text-center mt-3">
                ......................................................................
            </dd>
            <dd class="col-sm-3 text-end mt-3">
                @Html.DisplayFor(model => model.Agenda.SpecialMusicalNumber)
            </dd>
        }

        <dt class="col-sm-3 mt-3">
            Closing Hymn
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            <i>"@Model.Agenda.ClosingHymn?.HymnName"</i> #@Model.Agenda.ClosingHymn?.HymnNumber
        </dd>
        <dt class="col-sm-3 mt-3">
            Benediction
        </dt>
        <dd class="col-sm-6 text-center mt-3">
            ......................................................................
        </dd>
        <dd class="col-sm-3 text-end mt-3">
            @Model.Agenda.ClosingPrayerPerson?.PersonPrefix @Model.Agenda.ClosingPrayerPerson?.FirstName @Model.Agenda.ClosingPrayerPerson?.LastName
        </dd>
    </dl>
</div>
    
    <form method="post">
        <input type="hidden" asp-for="Agenda.AgendaID" />
    <div class="text-center mt-5">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-primary">Back to List</a>
    </div>
    </form>
