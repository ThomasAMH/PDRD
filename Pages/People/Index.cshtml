@page
@model PDRD.Pages.People.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-row justify-content-center align-items-center m-2">
    <h1 class="me-5">People</h1>
    <a id="add-new" class="btn btn-primary" asp-page="Create">+ Add New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].PersonPrefix)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Person) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonPrefix)
            </td>
            <td>
                    <div class="btn-group" role="group">
                        <a class="card-link btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.PersonID">Edit</a>
                        <a class="card-link btn btn-outline-primary" asp-page="./Details" asp-route-id="@item.PersonID">Details</a>
                        <a class="card-link btn btn-outline-primary" asp-page="./Delete" asp-route-id="@item.PersonID">Delete</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
